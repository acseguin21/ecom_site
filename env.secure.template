# Alpine Woodworks YYC - Environment Configuration Template
# Copy this file to .env.local and fill in your actual values
# NEVER commit .env.local to version control!

# Database Configuration
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=alpine_woodworks
POSTGRES_USER=woodworks_user
POSTGRES_PASSWORD=your_secure_database_password_here

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your_secure_redis_password_here

# Next.js Configuration
NEXTAUTH_SECRET=your_nextauth_secret_key_here_minimum_32_characters
NEXTAUTH_URL=http://localhost:3000

# Stripe Configuration
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key_here
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_stripe_webhook_secret_here

# Application Configuration
NEXT_PUBLIC_BASE_URL=http://localhost:3000
NODE_ENV=development

# Email Configuration (for order confirmations)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_business_email@gmail.com
SMTP_PASS=your_app_specific_password

# Shipping Configuration
FREE_SHIPPING_THRESHOLD=200
STANDARD_SHIPPING_RATE=15
EXPRESS_SHIPPING_RATE=30

# Security Configuration
JWT_SECRET=your_jwt_secret_here_minimum_32_characters
SESSION_SECRET=your_session_secret_here_minimum_32_characters

# Production Overrides (when deploying)
# NODE_ENV=production
# NEXT_PUBLIC_BASE_URL=https://yourdomain.com
