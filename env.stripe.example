# Stripe Configuration for Alpine Woodworks YYC
# Copy this file to .env.local and fill in your actual Stripe keys

# Stripe Publishable Key (starts with pk_test_ or pk_live_)
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key_here

# Stripe Secret Key (starts with sk_test_ or sk_live_)
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here

# Stripe Webhook Secret (for order confirmations)
STRIPE_WEBHOOK_SECRET=whsec_your_stripe_webhook_secret_here

# Your website URL
NEXT_PUBLIC_BASE_URL=http://localhost:3000

# Email for order confirmations
ORDER_EMAIL=alpinewoodworksyyc@gmail.com
